# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="Jokiin"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For Development (SQLite)
DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# For Production (MySQL)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=jokiin_db
# DB_USERNAME=jokiin_user
# DB_PASSWORD=your_secure_password

# For Production (PostgreSQL)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=jokiin_db
# DB_USERNAME=jokiin_user
# DB_PASSWORD=your_secure_password

# ===========================================
# SESSION & CACHE
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
# CACHE_PREFIX=

# ===========================================
# QUEUE & BROADCASTING
# ===========================================
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# For production with Redis
# QUEUE_CONNECTION=redis
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ===========================================
# FILESYSTEM
# ===========================================
FILESYSTEM_DISK=public

# AWS S3 Configuration (Optional)
# FILESYSTEM_DISK=s3
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ===========================================
# MAIL CONFIGURATION
# ===========================================
# Development (Log)
MAIL_MAILER=log

# Production (SMTP - Gmail Example)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

# Production (Mailgun)
# MAIL_MAILER=mailgun
# MAILGUN_DOMAIN=your-domain.com
# MAILGUN_SECRET=your-mailgun-key

# ===========================================
# EXTERNAL SERVICES
# ===========================================
MEMCACHED_HOST=127.0.0.1

# ===========================================
# VITE (FRONTEND BUILD)
# ===========================================
VITE_APP_NAME="${APP_NAME}"

# ===========================================
# CUSTOM - JOKIIN SPECIFIC
# ===========================================
# Admin WhatsApp for contact
ADMIN_WHATSAPP=6281234567890

# File Upload Limits (in KB)
MAX_FILE_SIZE=10240

# Order Status Options
# pending, proses, selesai, dibatalkan
DEFAULT_ORDER_STATUS=pending

# Default Price (in IDR)
DEFAULT_ORDER_PRICE=50000
